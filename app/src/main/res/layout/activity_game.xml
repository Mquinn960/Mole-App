<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mquinn.whackamole.GameActivity"
    android:background="#8dbb61">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/imageHill1"
        android:src="@drawable/placeholder_hole"
        android:layout_alignBottom="@+id/imageHill2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/imageHill2"
        android:src="@drawable/placeholder_hole"
        android:layout_above="@+id/imageHill5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/imageHill3"
        android:src="@drawable/placeholder_hole"
        android:layout_alignBottom="@+id/imageHill2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/imageHill4"
        android:src="@drawable/placeholder_hole"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/imageHill5"
        android:src="@drawable/placeholder_hole"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/imageHill6"
        android:src="@drawable/placeholder_hole"
        android:layout_alignBottom="@+id/imageHill5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/imageHill7"
        android:src="@drawable/placeholder_hole"
        android:layout_alignTop="@+id/imageHill8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/imageHill8"
        android:src="@drawable/placeholder_hole"
        android:layout_alignTop="@+id/imageHill9"
        android:layout_alignLeft="@+id/imageHill5"
        android:layout_alignStart="@+id/imageHill5"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/imageHill9"
        android:src="@drawable/placeholder_hole"
        android:layout_below="@+id/imageHill6"
        android:layout_alignLeft="@+id/imageHill6"
        android:layout_alignStart="@+id/imageHill6"
        android:layout_marginTop="73dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:id="@+id/textTimeLbL"
        android:textSize="8pt"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageHill2"
        android:layout_toEndOf="@+id/imageHill2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTimeVal"
        android:layout_alignBottom="@+id/textTimeLbL"
        android:layout_alignRight="@+id/imageHill3"
        android:layout_alignEnd="@+id/imageHill3"
        android:textSize="8pt"
        android:text="45s"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/imageHeart1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/placeholder_heart"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/imageHeart2"
        android:src="@drawable/placeholder_heart"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageHill1"
        android:layout_alignEnd="@+id/imageHill1"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:id="@+id/imageHeart3"
        android:src="@drawable/placeholder_heart"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageHill2"
        android:layout_toStartOf="@+id/imageHill2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:id="@+id/textScoreLbl"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageHeart2"
        android:layout_alignStart="@+id/imageHeart2"
        android:textSize="12pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3025"
        android:id="@+id/textScoreVal"
        android:textSize="12pt"
        android:layout_alignTop="@+id/textScoreLbl"
        android:layout_toLeftOf="@+id/imageHill9"
        android:layout_toStartOf="@+id/imageHill9"/>

</RelativeLayout>
